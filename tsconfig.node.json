{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true
  },
  "include": [
    "vite.config.ts"  // Ensure this file exists at the root level or adjust the path as needed.
  ],
  "exclude": [
    "node_modules"  // Typically, you want to exclude node_modules
  ]
}
